<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:text="@string/name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <EditText android:id="@+id/name"
              android:maxLength="50"
              android:hint="@string/event_name_hint"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <TextView android:text="@string/description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <EditText android:id="@+id/description"
              android:inputType="textMultiLine"
              android:minLines="2"
              android:maxLines="10"
              android:hint="@string/event_description_hint"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <TextView android:text="@string/address"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <EditText android:id="@+id/address"
              android:inputType="textMultiLine"
              android:minLines="2"
              android:maxLines="3"
              android:hint="@string/event_address_hint"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <TextView android:id="@+id/people_number_label"
                  android:text="@string/number_of_people"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <com.utilsframework.android.view.NumberPickerButton
                android:id="@+id/people_number"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/people_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.utilsframework.android.view.DateTimePickerButton
                android:id="@+id/date_and_time"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>