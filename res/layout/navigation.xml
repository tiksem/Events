<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/vk_black"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:id="@+id/events"
                  android:background="@drawable/navigation_item"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">
        <ImageView android:src="@drawable/ic_events"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

        <TextView android:layout_gravity="center"
                  android:textColor="@color/navigation_color"
                  android:textSize="@dimen/navigation_text_size"
                  android:padding="@dimen/navigation_item_padding"
                  android:text="@string/events"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/tags"
                  android:background="@drawable/navigation_item"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">
        <ImageView android:src="@drawable/ic_events"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

        <TextView android:layout_gravity="center"
                  android:textColor="@color/navigation_color"
                  android:textSize="@dimen/navigation_text_size"
                  android:padding="@dimen/navigation_item_padding"
                  android:text="@string/tags"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>