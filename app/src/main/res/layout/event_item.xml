<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/people_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            >
        <ImageView android:id="@+id/people_icon"
                   android:src="@drawable/ic_people_grey"
                   android:layout_width="32dp"
                   android:layout_height="32dp"/>
        <TextView android:id="@+id/people_number"
                  android:textStyle="bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView android:id="@+id/name"
              style="@style/header2"
              android:layout_marginTop="5dp"
              android:paddingRight="5dp"
              android:text="Event Name"
              android:layout_toRightOf="@+id/people_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/description"
              android:paddingTop="5dp"
              android:paddingRight="5dp"
              android:minLines="2"
              android:textColor="@color/text"
              android:layout_toRightOf="@+id/people_layout"
              android:layout_below="@+id/name"
              android:text="Description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_below="@+id/description"
                  android:layout_marginTop="5dp"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentBottom="true"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">

        <TextView android:id="@+id/date"
                  android:textColor="#fff"
                  android:paddingLeft="6dp"
                  android:background="#ffa500"
                  android:gravity="center"
                  android:paddingRight="6dp"
                  android:paddingTop="1dp"
                  android:paddingBottom="1dp"
                  android:text="10 Oct 2015 at 20:00"
                  style="@style/date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>