<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/header</item>
    </style>

    <style name="header2">
        <item name="android:textColor">@color/header</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="header3">
        <item name="android:textColor">@color/header</item>
    </style>

    <style name="date">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/vk_white</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="DateFilterCheckBoxTheme" parent="AppBaseTheme">
        <item name="colorAccent">@color/contrastColor</item>
        <item name="android:textColorSecondary">@color/vk_white</item>
    </style>

    <style name="contrastButton">
        <item name="android:textColor">@color/vk_white</item>
        <item name="android:background">@drawable/contrast_button</item>
    </style>

    <style name="cancelButton">
        <item name="android:textColor">@color/vk_white</item>
        <item name="android:background">@drawable/cancel_button</item>
    </style>
</resources>